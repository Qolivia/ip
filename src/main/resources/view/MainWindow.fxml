<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="saru.MainWindow"
            prefWidth="600" prefHeight="600">

    <children>
        <ScrollPane fx:id="scrollPane" fitToWidth="true"
                    prefWidth="580" prefHeight="520"
                    AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
                    AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="60">
            <content>
                <VBox fx:id="dialogContainer" spacing="10" prefWidth="560"/>
            </content>
        </ScrollPane>

        <TextField fx:id="userInput"
                   AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="90"
                   AnchorPane.bottomAnchor="10" prefHeight="40"/>

        <Button text="Send" fx:id="sendButton"
                onAction="#handleUserInput"
                AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10"
                prefWidth="70" prefHeight="40"/>
    </children>
</AnchorPane>
